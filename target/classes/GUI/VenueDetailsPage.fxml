<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.VenueDetailsController">

    <VBox fx:id="mainWindow" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem fx:id="menuClose" mnemonicParsing="false" onAction="#onCloseButtonClick" text="Close WiseGuide" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem fx:id="aboutButton" mnemonicParsing="false" onAction="#onAboutButtonPress" text="About" />
            </Menu>
        </MenuBar>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="goBack" onAction="#onBackButtonPress" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="45.0" prefWidth="75.0" text="Back">
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
            </Button>
            <Label id="venueName" fx:id="venueName" alignment="TOP_CENTER" prefWidth="900.0" styleClass="heading1" text="VENUE NAME" textAlignment="CENTER">
                <padding>
                    <Insets bottom="15.0" top="15.0" />
                </padding>
            </Label>
            <Button id="faveVenueButton" fx:id="faveVenueButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#favouriteButtonAction" prefHeight="45.0" prefWidth="119.0" text="Favourite">
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
            </Button>
        </HBox>
        <HBox prefHeight="300.0" prefWidth="900.0">
            <ImageView fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
            </ImageView>
            <TextArea id="venueText" fx:id="venueText" prefHeight="200.0" prefWidth="470.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
            </TextArea>
        </HBox>
        <HBox prefHeight="300.0" prefWidth="900.0">
            <GridPane prefWidth="430.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
            </GridPane>
            <VBox prefHeight="200.0" prefWidth="470.0">
                <Pane prefHeight="125.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </VBox.margin>
                </Pane>
                <Pane prefHeight="125.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </VBox.margin>
                </Pane>
            </VBox>
        </HBox>
    </VBox>

    <stylesheets>
        <URL value="@WiseGuideCSS.css" />
    </stylesheets>
</AnchorPane>
