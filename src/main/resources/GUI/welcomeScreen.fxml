<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="GUI.WelcomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Welcome!" onAction="#onHelloButtonClick"/>
    <Text styleClass="heading1" text="Version 1 of WiseGuide GUI. Soon to be updated with something much better than a single button and some text..."/>

    <stylesheets>
        <URL value="@WiseGuideCSS.css" />
    </stylesheets>
</VBox>
