            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="244.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@wiseguide-logo.png" />
               </image>
            </ImageView>
      </children>
    </AnchorPane>
  </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</VBox>
