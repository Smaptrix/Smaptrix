<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoginController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <Label alignment="CENTER" layoutX="173.0" layoutY="209.0" prefHeight="27.0" prefWidth="120.0" style="&#10;" text="Password" textAlignment="CENTER" textFill="#245164" wrapText="false">
          <font>
            <Font size="25.0" />
          </font>
        </Label>
            <Button id="loginButton" fx:id="loginButton" layoutX="349.0" layoutY="291.0" mnemonicParsing="false" onAction="#loginButtonAction" prefHeight="42.0" prefWidth="114.0" text="Login" />
            <PasswordField id="userPassField" fx:id="userPassField" layoutX="332.0" layoutY="215.0" />
            <TextField id="usernameTextField" fx:id="userTextField" layoutX="332.0" layoutY="167.0" />
            <Label layoutX="177.0" layoutY="156.0" text="Username" textFill="#245164">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Button id="createAccButton" fx:id="createAccButton" layoutX="176.0" layoutY="291.0" mnemonicParsing="false" onAction="#createAccButtonAction" prefHeight="42.0" prefWidth="114.0" text="Create Account" />
